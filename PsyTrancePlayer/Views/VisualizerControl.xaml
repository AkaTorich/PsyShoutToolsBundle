<UserControl x:Class="PsyTrancePlayer.Views.VisualizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Canvas x:Name="VisualizerCanvas" Background="#0A0A0F"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Canvas.Effect>
                <BlurEffect Radius="0"/>
            </Canvas.Effect>
        </Canvas>
    </Grid>
</UserControl>
