<Window x:Class="PsyTrancePlayer.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PsyTrance Player"
        Height="600" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="Logo"
                           Storyboard.TargetProperty="Opacity"
                           From="0.3" To="1.0" Duration="0:0:1.5"/>
        </Storyboard>

        <Storyboard x:Key="RotateStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="OuterRing"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:8"/>
        </Storyboard>

        <Storyboard x:Key="RotateReverseStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="InnerRing"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="360" To="0" Duration="0:0:6"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#0A0A0F" Offset="0"/>
                <GradientStop Color="#1A0A2E" Offset="0.5"/>
                <GradientStop Color="#0A0A0F" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Outer Ring -->
        <Ellipse x:Name="OuterRing"
                 Width="400" Height="400"
                 StrokeThickness="3"
                 RenderTransformOrigin="0.5,0.5">
            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#B026FF" Offset="0"/>
                    <GradientStop Color="#FF1493" Offset="0.5"/>
                    <GradientStop Color="#00BFFF" Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Stroke>
            <Ellipse.RenderTransform>
                <RotateTransform Angle="0"/>
            </Ellipse.RenderTransform>
            <Ellipse.Effect>
                <DropShadowEffect Color="#B026FF" BlurRadius="30" ShadowDepth="0" Opacity="0.8"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Inner Ring -->
        <Ellipse x:Name="InnerRing"
                 Width="300" Height="300"
                 StrokeThickness="2"
                 RenderTransformOrigin="0.5,0.5">
            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                    <GradientStop Color="#00BFFF" Offset="0"/>
                    <GradientStop Color="#39FF14" Offset="0.5"/>
                    <GradientStop Color="#FF1493" Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Stroke>
            <Ellipse.RenderTransform>
                <RotateTransform Angle="0"/>
            </Ellipse.RenderTransform>
            <Ellipse.Effect>
                <DropShadowEffect Color="#00BFFF" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Logo/Text -->
        <StackPanel x:Name="Logo" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="PSY TRANCE"
                       FontSize="60"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="White">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#B026FF" BlurRadius="25" ShadowDepth="0" Opacity="1"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="PLAYER"
                       FontSize="40"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Foreground="White">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FF1493" BlurRadius="20" ShadowDepth="0" Opacity="1"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="Loading..."
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Margin="0,40,0,0"
                       Foreground="#00BFFF"
                       Opacity="0.8"/>
        </StackPanel>
    </Grid>
</Window>
