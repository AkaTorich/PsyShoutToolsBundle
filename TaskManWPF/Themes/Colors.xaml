<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Основная палитра - тёмная тема в стиле Dracula -->
    <Color x:Key="BackgroundColor">#1E1F29</Color>
    <Color x:Key="SurfaceColor">#282A36</Color>
    <Color x:Key="SurfaceLightColor">#343746</Color>
    <Color x:Key="BorderColor">#44475A</Color>
    
    <!-- Акцентные цвета -->
    <Color x:Key="PrimaryColor">#BD93F9</Color>
    <Color x:Key="SecondaryColor">#8BE9FD</Color>
    <Color x:Key="AccentColor">#FF79C6</Color>
    <Color x:Key="SuccessColor">#50FA7B</Color>
    <Color x:Key="WarningColor">#FFB86C</Color>
    <Color x:Key="DangerColor">#FF5555</Color>
    
    <!-- Текст -->
    <Color x:Key="TextPrimaryColor">#F8F8F2</Color>
    <Color x:Key="TextSecondaryColor">#6272A4</Color>
    <Color x:Key="TextMutedColor">#545766</Color>
    
    <!-- Кисти -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
    
    <!-- Градиенты -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#BD93F9" Offset="0"/>
        <GradientStop Color="#FF79C6" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#282A36" Offset="0"/>
        <GradientStop Color="#1E1F29" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>

